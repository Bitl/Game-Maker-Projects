    if point_distance(x,y,target.x,target.y)&gt;200
    {
        //disband our player when we found a target
        
        //follow = noone
        
        //shoot our target.
        if target.x&gt;x
        {
            hsp=7
            image_index=0
            bot_left=0
            bot_right=1
        }
        else
        {
            hsp=-7
            image_index=1
            bot_left=1
            bot_right=0
        }
    }
    
    if (instance_nearest(x,y,target)&gt;50)
    {
        hsp = 0
    }
}

if !instance_exists(target)
{
    //If our targets are dead, follow the player
    follow = par_player
    target = noone
}

if instance_exists(follow) &amp;&amp; follow != noone
{
    follow = par_player

    if point_distance(x,y,follow.x,follow.y)&gt;50
    {
        if follow.x&gt;x
        {
            hsp=7
            image_index=0
            bot_left=0
            bot_right=1
        }
        else
        {
            hsp=-7
            image_index=1
            bot_left=1
            bot_right=0
        }
    }
}

if !instance_exists(follow)
{
    if instance_exists(target)
    {
        // Our friend died. Let's wait for him to respawn while we are still in combat.
        target = par_enemy
    }
    
    follow = noone
}

